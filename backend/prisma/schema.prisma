generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id @default(cuid())
  name String
  email String @unique
  password String
  avatar String?
  createdAt DateTime @default(now())
  movies Movie[] @relation("UserMovies")
}

model Movie {
  id String @id @default(cuid())
  title String
  genre String
  year Int
  duration Int? //duration in minutes
  rating Float? @default(0)
  comment String?
  isFavorite Boolean @default(false)
  isCompleted Boolean @default(false)
  watchProgress Float? @default(0)
  poster String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ownerId String
  owner User @relation("UserMovies", fields: [ownerId], references: [id])
}